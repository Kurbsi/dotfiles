# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart

# mode for poweroff and reboot
set $mode_system System (l) logout, (s) suspend, (h) hibernate, (r) reboot, (x) shutdown
mode "$mode_system" {
        # exit i3 (logs you out of your X session)
        bindsym l exec --no-startup-id i3-msg exit, mode "default"
        # suspend
        bindsym s exec --no-startup-id systemctl suspend, mode "default"
        # hibernate
        bindsym h exec --no-startup-id systemctl hibernate, mode "default"
        # reboot
        bindsym r exec --no-startup-id systemctl reboot, mode "default"
        # poweroff
        bindsym x exec --no-startup-id systemctl poweroff -i, mode "default"

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}
bindsym $mod+Home mode "$mode_system"

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym h resize shrink width 10 px or 10 ppt
        bindsym j resize grow height 10 px or 10 ppt
        bindsym k resize shrink height 10 px or 10 ppt
        bindsym l resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape or $mod+r
        bindsym Return mode "default"
        bindsym Escape mode "default"
}
bindsym $mod+r mode "resize"

# switch between german and us keyboard
set $keyboard_system US (u), DE (d)
mode "$keyboard_system" {
        bindsym u exec setxkbmap us, mode "default"
        bindsym d exec setxkbmap de, mode "default"

        # back to normal: Enter or Escape or $mod+r
        bindsym Return mode "default"
        bindsym Escape mode "default"
}
bindsym $mod+Control+k mode "$keyboard_system"

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
      #font pango:System San Francisco Display 7
      font pango:Meslo LG M DZ Regular Nerd Font Complete Mono 7
      status_command i3blocks
      position top
      mode dock
      modifier none
      strip_workspace_numbers yes
      #output primary
      tray_output primary
    	colors {
      		separator $base03
      		background $base01
      		statusline $base05
      		focused_workspace 	  $base01 $base01 $base0D
      		active_workspace 	    $base02 $base02 $base07
      		inactive_workspace 	  $base01 $base01 $base03
      		urgent_workspace 	    $base08 $base08 $base07
    	}
}

